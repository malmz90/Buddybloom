<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turquisegreen"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/iv_logo_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_bkg2" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="logout"
        android:backgroundTint="@color/darkgreen"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fvc_game_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo_game"
        app:layout_constraintBottom_toTopOf="@+id/navbar_container">
    </androidx.fragment.app.FragmentContainerView>

    <FrameLayout
        android:id="@+id/navbar_container"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/border_nav_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navbar_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="38dp"
        app:itemIconTint="@color/darkgreen"
        app:itemPaddingTop="0dp"
        app:itemPaddingBottom="0dp"
        app:itemHorizontalTranslationEnabled="false"/>


    <!--Alternativ till att highlighta knappar, kanske hänger med bättre när man är på vald ikon?-->
<!--        app:itemTextAppearanceActive="@style/BottomNavTextActive"-->
<!--        app:itemTextAppearanceInactive="@style/BottomNavTextInactive" />-->
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>